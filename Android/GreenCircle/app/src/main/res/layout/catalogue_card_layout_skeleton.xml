<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-284dp"
            android:layout_toStartOf="@id/company_profile_pic"
            android:background="@drawable/skeleton_text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Usuario con un nombre muy muy largo"
            android:textAlignment="textStart"
            android:textColor="@android:color/transparent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_location"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_name"
            android:layout_alignEnd="@id/company_profile_pic"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="-193dp"
            android:background="@drawable/skeleton_text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Juriquilla, QuerÃ©taro"
            android:textAlignment="textStart"
            android:textColor="@android:color/transparent"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/item_ubicationIcon"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_below="@id/company_name"
            android:layout_alignEnd="@id/company_profile_pic"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="-39dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/pin_drop_fill0_wght400_grad0_opsz24_bw" />

        <TextView
            android:id="@+id/company_rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_location"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/company_rating_bar"
            android:background="@drawable/skeleton_text_view"
            android:text="--.--"
            android:textAlignment="textStart"
            android:textColor="@android:color/transparent"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_ratingTextde5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_location"
            android:layout_alignLeft="@id/company_rating_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="de 5"
            android:textColor="@color/gray_300"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/company_rating_bar"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_location"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/company_profile_pic"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#589A74"
            android:stepSize="0.5" />

        <CheckBox
            android:id="@+id/mark_as_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="-364dp"
            android:layout_toLeftOf="@id/company_name"
            android:button="@drawable/sl_favourite_24dp"
            android:buttonTint="@color/gray_200" />

        <ImageView
            android:id="@+id/company_profile_pic"
            android:layout_width="94dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/main_logo_bw" />
        />
    </RelativeLayout>


</androidx.cardview.widget.CardView>

