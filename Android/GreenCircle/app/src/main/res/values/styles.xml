<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@Roboto</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.Button.borderButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textColor">@animator/custom_selector_text</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@animator/custom_selector</item>
        <item name="rippleColor">@null</item>
    </style>
</resources>