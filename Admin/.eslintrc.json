{
  "env": {
    "node": true
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": "*.config.js",
  "rules": {
    // Tus reglas personalizadas aquÃ­
    "react/react-in-jsx-scope": "off", // No es necesario importar React cuando se usa Next.js
    "jsx-a11y/anchor-is-valid": "off", // No es necesario que los enlaces tengan una referencia
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": [
          "FunctionExpression > .params[decorators.length > 0]",
          "FunctionExpression > .params > :matches(Decorator, :not(:first-child))",
          "ClassBody.body > PropertyDefinition[decorators.length > 0] > .key"
        ]
      }
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "all" }],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "vars": "all", "args": "all" }
    ]
  }
}
