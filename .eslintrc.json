{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "prefer-const": "error",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "no-unused-vars": ["warn", { "vars": "all", "args": "all" }],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        { "vars": "all", "args": "all" }
      ]
    }
  }